<p id="notice"><%= notice %></p>

<% cache @brewery do %>

<h2>
  <%= @brewery.name %>
  <% if not @brewery.active %>
  <span class="label label-info">retired</span>
  <% end %>
</h2>

<p>
  <i><%= "Established in #{@brewery.year}" %></i>
</p>

<p>
  <%= "Number of beers #{@brewery.beers.count}" %>
</p>

<p>
  <% @brewery.beers.each do |beer| %>
  <%= link_to beer.name, beer %>
  <% end %>
</p>

<p>
  <% if @brewery.ratings.empty? %>
  no ratings yet!
  <% else %>
  Has <%= pluralize(@brewery.ratings.count, 'rating') %>, average <%= round(@brewery.average_rating) %>
  <% end %>
</p>

<% end %>

<%= button_to 'change activity', toggle_activity_brewery_path(@brewery.id), method: :post, class:"btn btn-primary" %>

<%= edit_and_destroy_buttons(@brewery) %>
