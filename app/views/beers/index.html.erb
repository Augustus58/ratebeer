<p id="notice"><%= notice %></p>

<h1>Listing Beers</h1>

<p>
Number of beers: <%= Beer.all.count%>
</p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th>Brewery</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
    <tr>
      <td><%= link_to beer.name, beer %></td>
      <td><%= beer.style.name %></td>
      <td><%= link_to Brewery.find_by(id: beer.brewery_id).name, Brewery.find_by(id: beer.brewery_id) %></td>
      <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
      <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>
<%= link_to 'New Beer', new_beer_path if current_user %>
</p>

<p>
  <%= link_to 'Breweries', breweries_path %>
</p>
